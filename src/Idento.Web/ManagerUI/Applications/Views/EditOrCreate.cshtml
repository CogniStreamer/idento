﻿@model Idento.Web.ManagerUI.Applications.Models.EditOrCreate
@{
    var action = ViewContext.RouteData.Values["action"].ToString();
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    ViewBag.Title = action.Equals("Create") ? "New app" : "Edit app";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm(action, controller, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(m => m.ClientId)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Enabled, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.CheckBoxFor(m => m.Enabled)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DisplayName, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GrantType, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.DropDownListFor(m => m.GrantType, (IEnumerable<SelectListItem>)ViewBag.AvailableGrantTypes, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ClientId, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.ClientId, new { @class = "form-control", disabled = "" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ClientSecret, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.ClientSecret, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Uri, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Uri, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RedirectUris, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextAreaFor(m => m.RedirectUris, new { @class = "form-control" })
        </div>
        <div class="col-md-4 description">
            <small>@Html.DescriptionFor(m => m.RedirectUris)</small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AllowedCorsOrigins, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextAreaFor(m => m.AllowedCorsOrigins, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <small>@Html.DescriptionFor(m => m.AllowedCorsOrigins)</small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AccessTokenLifetimeInMinutes, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.AccessTokenLifetimeInMinutes, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RequireConsent, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.CheckBoxFor(m => m.RequireConsent)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AllowAllScopes, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.CheckBoxFor(m => m.AllowAllScopes)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AllowedScopes, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextAreaFor(m => m.AllowedScopes, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <small>@Html.DescriptionFor(m => m.AllowedScopes)</small>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AllowedExternalLoginProviders, new { @class = "col-md-3 control-label" })
        <div class="col-md-5">
            @Html.TextAreaFor(m => m.AllowedExternalLoginProviders, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <small>@Html.DescriptionFor(m => m.AllowedExternalLoginProviders)</small>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-5">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
